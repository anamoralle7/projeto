
<%- include('../partials/header') %>

<!-- Conteudo do index  -->
<main class="container d-flex flex-column flex-fill justify-content-center">
  <h1 class="text-center"> CADASTRO DE PRODUTOS</h1>

  <!-- CRIANDO O FORMULÁRIO PARA ENVIO DAS INFORMAÇÕES  -->
  <form action="/produtos/<%= produto.id %>" method="POST">
    <div class="mb-3">
      <!-- Caixinha de nome de usuário  -->

    
      <label for="inputproduto" class="form-label fs-2 mt-2">
        Nome de produto
      </label>
      <input
        type="text"
        id="inputproduto"
        class="form-control form-control-lg"
        placeholder="Digite o nome de produto"
        name="nome"
        required
        value="<%= produto.nome %>"
      />
     
      <!-- Fim de caixinha nome de usuário -->

      <!-- Caixinha de descricao -->
      <label for="inputdescricao" class="form-label fs-2 mt-2"> Descrição</label>
      <input
        type="text"
        id="inputdescricao"
        class="form-control form-control-lg"
        placeholder="Digite a descrião de produto "
        name="descricao"
        required
        value="<%= produto.descricao %>"
      />
     
      <!-- Fim de caixinha descricao -->

      <!-- Caixinha de tipo  -->

        <div class="row g-3">
        <div class="col-md-6">

      <label class="form-label fs-2 mt-2"> categoria de produto</label>
      <select name="alimentos" class="form-select form-select-lg mb-3" >
        <option value="remedio"<%= produto.categoria === "remedios" ? "selected": "" %>> 
            remedios
         </option>
        <option value="celulares" <%=produto.categoria === "celulares" ? "selected": "" %>>
             celulares 
            </option>
        <option value="ferramentas"  <%=produto.categoria === "ferramentas" ? "selected": "" %>> 
            ferramentas
         </option>
      </select>
     </div>

</div>
      <!-- Fim de caixinha tipo -->

      <!-- Botão pra envio do formulário  -->
      <div class="row g-3">
        <div class="col-md-6">


      <label for="inputpreco" class="form-label fs-2 mt-2"> preço</label>
      <input
        type="text"
        id="inputpreco"
        class="form-control form-control-lg"
        placeholder="Digite o preço de produto "
        name="preco"
        required
          value= "<%= produto.preco %>"
      />

   <label for="inputquantidade" class="form-label fs-2 mt-2"> Quantidade</label>
      <input
        type="text"
        id="inputquantidade"
        class="form-control form-control-lg"
        placeholder="Digite a quantidade de produto "
        name="preço"
        required
          value= <%= produto.quantidade %>
      />
    </div>
      <div class="col">
      <label for="inputimagem" class="form-label fs-2 mt-2"> imagem</label>
      <input
        type="url"
        id="inputimagem"
         name="imagemUrl"
        class="form-control form-control-lg"
        placeholder="Digite o preço de produto "
        required
          value=<%= produto.url %>
      />
<img src= <%= produto.url %>
class="rouded mx-auto d-block mt-2"
id="previewImagem"
width="250px"
height="250px"
/>
      </div>
      </div>
       <button type="text" class="btn btn-lg btn-primary">Editar</button>
    
  </form>
  <script>
    const inputimagem = document.getElementById("inputimagem")

    const previewImagem = document.getElementById("previewImagem")

    const imagemPadrao = "https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQ4M7nZjgoZAoxHYQi_kKvCnWceK3LWl92uXQ&s"

    inputimagem.addEventListener("input", () => {

    const url = inputimagem.value

    previewImagem.src  = url || imagemPadrao
  })
  </script>
</main>
 
<!-- Rodape de todas as páginas  -->
<%- include('../partials/footer') %>
